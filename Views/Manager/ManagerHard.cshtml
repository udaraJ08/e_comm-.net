@model List<HardModal>

<div class="w-100 container" style="height: 100vh">

    <h1 class="f-bangers pt-5">Manage Hard</h1>

    <div class="form-container mt-5">
        <div class="row pt-3">
            <div class="form-group col-lg-4">
                <label class="control-label mb-2">Hard Title</label>
                <input id="hardTitle" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label class="control-label mb-2">Storage (TB)</label>
                <input type="number" id="hardStorage" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label class="control-label mb-2">Price (lkr)</label>
                <input type="number" id="hardPrice" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-end mt-3">
                <div class="form-group">
                    <button class="btn btn-primary" onclick="addNewHard()">ADD NEW HARD</button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-container mt-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Storage</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th scope="row">@category.Id</th>
                        <td>@category.Title</td>
                        <td>@category.Storage</td>
                        <td>Rs.@category.Price /=</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>